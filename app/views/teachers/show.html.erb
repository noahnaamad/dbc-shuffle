<div class="container">
  <h1>Teacher <%= current_teacher.name %>'s Profile Page</h1>

  <div class="left">
    <h3><%= current_teacher.location.name %> Cohorts</h3>
      <ul>
        <% @cohorts_in_location.each do |cohort| %>
          <li><%= link_to "#{cohort.name}", cohort_path(cohort) %></li>
        <% end %>
      </ul>
  </div>

  <div class="center">
    <h3>Center - Create a new cohort</h3>
    <!-- render new cohort partial on click -->
    <!-- create the partial first and make that work -->
    <button id="show_form_button">Add New Cohort</button>
    <div id="add_cohort_form">
        <%= render partial: '/cohorts/form' %>
    </div>
  </div>

  <div class="right">
    <h3>Right - My info:</h3>
    <p>Name: <%= current_teacher.name %>
  </div>

</div>
