<!DOCTYPE html>
<html>
<head>
  <title>dbc Shuffle</title>
  <%= javascript_include_tag  'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag     '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag     '//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'%>
  <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>

  <%= csrf_meta_tags %>
</head>

<nav class="nav">
    <% if teacher_signed_in? %>
      Logged in as <strong><%= current_teacher.email %></strong>.
      <%= link_to "Logout", destroy_teacher_session_path, method: :delete, :class => 'navbar-link'  %>
      <%= link_to 'Profile & Update Cohorts', teacher_path(current_teacher), :class => 'navbar-link' %>
    <% else %>
      <%= link_to "Sign up", new_teacher_registration_path, :class => 'navbar-link'  %>
      <%= link_to "Login", new_teacher_session_path, :class => 'navbar-link'  %>
    <% end %>
</nav>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</html>
